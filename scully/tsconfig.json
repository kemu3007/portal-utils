{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@*": ["../src/*"]
    },
    "esModuleInterop": true,
    "importHelpers": false,
    "lib": ["ES2022", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2022",
    "types": ["node"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "typeRoots": ["../node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
  },
  "include": ["../**/*"],
  "exclude": ["../**/*spec.ts"]
}
